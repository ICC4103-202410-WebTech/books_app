<%= form_with model: book, local: true do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :price %>
    <%= form.number_field :price, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :year %>
    <%= form.number_field :year, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :publish_date %>
    <%= form.date_field :publish_date, class: "form-control" %>
  </div>
  <div class="form-group mb-3">
    <% if author.present? %>
      <%= form.hidden_field :author_id, value: author.id %>
      <%= form.label :author_id %>
      <%= form.text_field :author_id, class: "form-control", disabled: true, value: author.name %>
    <% else %>
      <%= form.label :author_id %>
      <%= form.collection_select :author_id, authors, :id, :name_age, {prompt: 'Please select the author of this post'}, { class: "form-select" }%>
    <% end %>
  </div>
  <div class="actions">
    <%= form.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>

