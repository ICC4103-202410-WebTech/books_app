<div class="container">
  <h1 style="color:blue"><i class="bi bi-book"></i> BOOKS </h1>

  <table class="table table-bordered align-middle">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Year</th>
        <th scope="col">Price</th>
        <th scope="col">Author</th>
        <th scope="col">Publish Date</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <th scope="row"><%= book.id %></th>
        <td><%= book.title %></td>
        <td><%= book.year %></td>
        <td><%= book.price %></td>
        <td><%= book.author.name %></td>
        <td><%= book.publish_date %></td>
        <td>
            <%= link_to book, class: "btn btn-outline-primary"  do %>
              <i class="bi bi-eye"></i>
            <% end %>
            <%= link_to edit_book_path(book), class: "btn btn-outline-primary" do %>
              <i class="bi bi-pencil"></i>
            <% end %>
            <%= link_to book, data: { turbo_confirm: 'Are you sure?', turbo_method: "delete" }, class: "btn btn-outline-danger" do %>
              <i class="bi bi-trash"></i>
            <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>