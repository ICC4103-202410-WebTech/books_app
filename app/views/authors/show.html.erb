<h1> <%= @author.name%> </h1>
<p> <%= @author.age %> </p>
<p> Books: <%= @books.size %></p>

<%= link_to new_author_book_path(author_id: @author.id), class: "btn btn-success" do %>
  <i class="bi bi-plus"></i> Add book
<% end %>

<table class="table">
  <thead>
    <tr>
      <th> Title </th>
      <th> Year </th>
      <th> Price </th>
      <th> Publish date </th>
      <th> Actions </th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td> <%= book.title %> </td>
        <td> <%= book.year %> </td>
        <td> <%= book.price %> </td>
        <td> <%= book.publish_date %> </td>
        <td>
          <%= link_to book_path(book), class: "btn btn-info" do %>
            <i class="bi bi-eye"></i>
          <% end %>
          <%= link_to edit_book_path(book), class: "btn btn-warning" do %>
            <i class="bi bi-pencil"></i>
          <% end %>
          <%= link_to book_path(book), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" do %>
            <i class="bi bi-trash"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to authors_path, class: "btn btn-primary" do%>
  <i class="bi bi-arrow-90deg-left"></i> Back
<% end %>