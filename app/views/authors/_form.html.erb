<%= form_with model: author, local: true do |form| %>
  <div class="form-group">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, class: "form-control", required: true %>
  </div>
    <div class="form-group">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, class: "form-control", required: true %>
  </div>
    <div class="form-group">
    <%= form.label :age %>
    <%= form.number_field :age, class: "form-control" %>
  </div>
  <% if author.new_record? %>
   <h2> Book </h2>
   <%= form.fields_for :books, Book.new do |book_form| %>
    <div class="form-group">
      <%= book_form.label :title %>
      <%= book_form.text_field :title, class: "form-control", required: true %>
    </div>
    <div class="form-group">
      <%= book_form.label :price %>
      <%= book_form.number_field :price, class: "form-control", required: true %>
    </div>
    <div class="form-group">
      <%= book_form.label :year %>
      <%= book_form.number_field :year, class: "form-control", required: true %>
    </div>
    <div class="form-group">
      <%= book_form.label :publish_date %>
      <%= book_form.date_field :publish_date, class: "form-control", required: true %>
    </div>
  <% end %>

  <% end %>

  <div class="actions">
    <%= form.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>