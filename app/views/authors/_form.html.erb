<%= form_with model: author, local: true do |form| %>
  <div class="form-groupn mb-3">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, class: "form-control", required: true %>
  </div>
    <div class="form-group mb-3">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, class: "form-control", required: true %>
  </div>
    <div class="form-group mb-3">
    <%= form.label :age %>
    <%= form.number_field :age, class: "form-control" %>
  </div>
  <%= form.submit "Submit", class: "btn btn-primary mt-2" %>
<% end %>